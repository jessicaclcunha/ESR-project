import time
import random

# Cada nó tenta se conectar a N vizinhos (ex: N=3)
def conectar_vizinhos(nodo, vizinhos_existentes, num_vizinhos=3):
    vizinhos = random.sample(vizinhos_existentes, num_vizinhos)
    for vizinho in vizinhos:
        print(f"Nó {nodo} conectando-se ao vizinho {vizinho}")
        # Estabelecer uma conexão (pode ser TCP ou UDP)
